        <div class="container">
          <div class="row justify-content-center mt-5">
            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4">
              <h1 class="display-4"><%= page %></h1>

              <form action="/newUser" method="POST">
                <fieldset>
                  <div class="form-group mt-5">
                    <div class="form-group">
                      <% if (locals.feedback) { %> 
                        <div class="alert alert-danger mt-5"><%= feedback %></div>
                      <% } %>

                      <label for="name" class="sr-only">User Name</label>
                      <input type="text" id="user_name" name="user_name" class="form-control" placeholder="User Name" required autofocus>
                    </div>

                    <div class="form-group">
                      <label for="email" class="sr-only">Email address</label>
                      <input type="email" id="user_email" name="user_email" class="form-control" placeholder="Email address" required autofocus>
                    </div>

                    <div class="form-group">
                      <label for="password" class="sr-only">Password</label>
                      <input type="password" id="user_password" name="user_password" class="form-control" placeholder="Password" required>
                    </div>
                  </div>

                  <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" id="login" type="submit">Create Account</button>
                  </div>

                </fieldset>
              </form>
            </div>
          </div>
        </div>


